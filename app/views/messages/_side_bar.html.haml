.chat-side
  .chat-side__username
    .chat-side__username__top-items
      %p.chat-side__username__top-items__name 
        = current_user.name
      %ul.chat-side__username__top-items__box
        %li.chat-side__username__top-items__box--pen
          = link_to new_group_path do
            = icon('far','edit')
        %li.chat-side__username__top-items__box--gear
          = link_to edit_user_path(current_user) do
            = icon('fas','cog')
  .chat-side__group-list
    - current_user.groups.each do |group|
      .chat-side__group-list__group
        = link_to group_messages_path(group), class: "chat-side__group-list__group__name" do
          = group.name
        .chat-side__group-list__group__coment
          = group.show_last_message



